<h1>Welcome to <%= current_user.title %> <%= current_user.first_name %> <%= current_user.last_name %>'s Classroom Manager!</h1>
<br>

<h3><%= link_to 'My Classrooms', user_classrooms_path(current_user), :class => "load_classrooms" %></h3>
<div class="classrooms"></div>
<div class="subject"></div>
<br>


<button type="button" class="alphabetize" data-id="<%= current_user.id %>">Alphabetize</button>


<br>
<br>

<h4>Add a new classroom:</h4>
<%= form_for([current_user, @classroom], html: {"data-user_id": current_user.id}) do |f| %>
	<%= f.label :subject %>
	<%= f.text_field :subject %>
	<br>
	<%= f.submit %>
<% end %>



<br>
<h3><%= link_to 'All Students', students_path, :class => "load_students" %></h3>
<div class="students"></div>
<div class="studentName"></div>

<br>

<h4>Add a new student:</h4>
<%= form_for(@student) do |f| %>
	<%= f.label :first_name %>
	<%= f.text_field :first_name %>
	<br>

	<%= f.label :last_name %>
	<%= f.text_field :last_name %>

	<br>

	<%= f.label :grade %>
	<%= f.text_field :grade %>

	<br>

	<%= f.submit %>

<% end %>