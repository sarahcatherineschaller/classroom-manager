<h1><%= current_user.title %> <%= current_user.last_name %>'s Classrooms</h1>

<%= link_to 'Create a new classroom', new_user_classroom_path(current_user) %>

<br>
<br>

<% current_user.classrooms.each do |classroom| %>
	<div><%= link_to classroom.subject, user_classroom_path(current_user, classroom) %></div>
<% end %>

<br>
<br>

<%= link_to 'Classroom with the Most Students', most_students_classrooms_path %>

<br>
<br>
<h3>Elementary School:</h3>
	<% @students.elementary_school.order(:last_name).each do |student| %>
		<%= link_to student.last_name_first_name, student %>
		<br>
	<% end %>
<br>
<h3>Middle School:</h3>
	<% @students.middle_school.order(:last_name).each do |student| %>
		<%= link_to student.last_name_first_name, student %>
		<br>
	<% end %>
<br>
<h3>High School:</h3>
	<% @students.high_school.order(:last_name).each do |student| %>
		<%= link_to student.last_name_first_name, student %>
		<br>
	<% end %>

